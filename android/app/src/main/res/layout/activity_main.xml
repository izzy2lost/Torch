<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/black">

    <!-- Torch Icon -->
    <ImageView
        android:id="@+id/torchIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Torch Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Torch"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert N64 ROM to O2R format\nChoose your target configuration below"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/primary_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Configuration:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/neon_yellow" />

    <RadioGroup
        android:id="@+id/configRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/starshipRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starship (Star Fox 64)"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:buttonTint="@color/neon_yellow"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/spaghettiRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti Kart (Mario Kart 64)"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:buttonTint="@color/neon_yellow" />

    </RadioGroup>

    <Button
        android:id="@+id/selectRomButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select ROM File (.z64 format only)"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/black"
        android:elevation="4dp" />

    <Button
        android:id="@+id/selectOutputButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Select Output Directory"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/black"
        android:elevation="4dp" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Generate O2R"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/black"
        android:elevation="4dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/neon_yellow"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ROM: Not selected"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/configStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Config: Not selected"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/outputStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Output: App directory (default)"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/primary_text" />

</LinearLayout>